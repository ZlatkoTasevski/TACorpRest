@model Tasevski.Services.Identity.MainModule.Account.RegisterViewModel

<div class="login-page">
    <div class="lead">
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h2>Регистрирај се</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Username">Корисничко име</label>
                            <input class="form-control" placeholder="Корисничко име" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Е-пошта</label>
                            <input class="form-control" placeholder="Е-пошта" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName">Име</label>
                            <input class="form-control" placeholder="Име" asp-for="FirstName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">Презиме</label>
                            <input class="form-control" placeholder="Презиме" asp-for="LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Лозинка</label>
                            <input type="password" class="form-control" placeholder="Лозинка" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleName">Роља</label>
                            <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(ViewBag.message))"></select>
                        </div>
                        <button class="btn btn-primary" name="button" value="Register">Регистрација</button>
                        <a href="@Url.Action("Login",new {Model.ReturnUrl })" class="btn btn-secondary" name="button" value="cancel">Откажи</a>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Login",new {Model.ReturnUrl })">Најави се</a>
                </div>
            </div>
        </div>


    </div>
</div>