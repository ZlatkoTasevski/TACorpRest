@model IEnumerable<Tasevski.Web.Models.ProductDTO>

<br />
<br />

<div class="container border p-4">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Листа на производи</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-success btn-sm mt-2"> Креирај нов производ</i></a>
        </div>
    </div>
    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Име</th>
                <th>Категорија</th>
                <th>Опис</th>
                <th>Цена</th>
                <th class="text-center">Опции</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>@((item.Price).ToString("c"))</td>
                    <td class="text-center">
                        <a asp-action="ProductEdit" class="btn btn-success btn-sm" asp-route-productId="@item.ProductId"><i class="fas fa-edit"></i></a>
                        <a asp-action="ProductDelete" class="btn btn-danger btn-sm" asp-route-productId="@item.ProductId"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
<script type="text/javascript">
               $(document).ready( function () {
                     var table = $('#example').DataTable( {
                   lengthChange: false,
                   buttons: [ 'copy', 'excel', 'pdf', 'colvis'
                   //{
                   //   extend: 'pdfHtml5',
                   //   orientation: 'landscape',
                   //   pageSize: 'A4', // TABLOID OR LEGAL
                   //   footer: true,
                   // }
                   ]
               });

               table.buttons().container()
                   .appendTo( '#example_wrapper .col-md-6:eq(0)' );
           });
</script>
}